{{#if isLogin}}
{{#if failedLogin}}
<h2>{{message}}</h2>
{{/if}}
<div class="">
  <h2 class="">Login</h2>
  <form class="login-form">
    <div class="">
      <label for="email-login">Email:</label>
      <input class="" type="text" id="email-login" />
    </div>
    <div class="">
      <label for="">Password:</label>
      <input class="" type="password" id="password-login" />
    </div>
    <div class="">
      <button class="" type="submit">login</button>
    </div>
  </form>
</div>
{{else}}
{{#if failedSignUp}}
<h2>{{message}}</h2>
{{/if}}
<div class="">
  <h2 class="">Signup</h2>
  <form class="signup-form">
    <div class="">
      <label for="username-signup">Username:</label>
      <input class="" type="text" id="username-signup" />
    </div>
    <div class="">
      <label for="email-signup">Email:</label>
      <input class="" type="text" id="email-signup" />
    </div>
    <div class="">
      <label for="password-signup">Password:</label>
      <input class="" type="password" id="password-signup" />
    </div>
    <div class="">
      <button class="" type="submit">signup</button>
    </div>
  </form>
</div>
{{/if}}

<script src="./js/login.js"></script>