{{!-- <div class="container">
    <div class="row"> --}}
        <div class="col-md-6 col-lg-4">
            <div class="card card-margin">
                <div class="card-header no-border">
                    <h5 class="card-title car-title py-1 px-2">{{make}} {{model}} - {{year}}</h5>
                </div>
                <div class="card-body pt-0">
                    <div class="widget-49">
                        <div class="widget-49-title-wrapper" style="justify-content: flex-end;">
                            <div class="widget-49-meeting-info">
                                <span class="widget-49-pro-title">Total Tasks:    </span>
                                {{!-- <span class="widget-49-meeting-time">12:00 to 13.30 Hrs</span> --}}
                            </div>
                            <div class="widget-49-date-primary">
                                <span class="widget-49-date-day">{{task_length}}</span>
                                {{!-- <span class="widget-49-date-month">apr</span> --}}
                            </div>
                        </div>
                        <ol class="widget-49-meeting-points">
                            {{#each tasks as |task|}}
                            {{> car-tasks-details}}
                            {{/each}}
                            {{!-- {{#if tasks}}
                            <li class="widget-49-meeting-item"><span>{{tasks[0].task_name}}</span></li>
                            {{/if}}
                            {{#if tasks[1]}}
                            <li class="widget-49-meeting-item"><span>{{tasks[1].task_name}}</span></li>
                            {{/if}}
                            {{#if tasks[2]}}
                            <li class="widget-49-meeting-item"><span>{{tasks[2].task_name}}</span></li>
                            {{/if}} --}}
                            {{!-- <li class="widget-49-meeting-item"><span>Data migration is in scope</span></li>
                            <li class="widget-49-meeting-item"><span>Session timeout increase to 30 minutes</span></li> --}}
                        </ol>

                        <div class="widget-49-meeting-action mt-1" style="
                            display: flex;
                            justify-content: space-between;
                        ">
                            <button class="deleteCarButton btn btn-danger delete-btn" data-carid="{{id}}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                            </button>
                            <a href="/api/cars/{{id}}" class="btn btn-sm btn-flash-border-primary">View All</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{!-- </div>
</div> --}}